# ===================================
# Database Configuration
# ===================================
DATABASE_URL="postgresql://xenouser:xenopass@localhost:5432/xenodb?schema=public"

# ===================================
# Server Configuration
# ===================================
NODE_ENV=development
PORT=3000

# Base URL for API (used by cron jobs)
API_BASE_URL=http://localhost:3000

# ===================================
# Shopify Configuration
# ===================================
# Get these from your Shopify Partner Dashboard
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Shopify API version
SHOPIFY_API_VERSION=2024-01

# ===================================
# Cron Configuration
# ===================================
# Set to 'true' to enable automated tenant synchronization (every 10 minutes)
ENABLE_CRON=false

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=info

# ===================================
# Security
# ===================================
# Session secret for authentication (if using sessions)
SESSION_SECRET=your_random_session_secret_here

# ===================================
# Frontend URL (for CORS)
# ===================================
FRONTEND_URL=http://localhost:3001
